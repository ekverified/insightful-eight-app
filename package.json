{
  "name": "i8-frontend",
  "version": "1.0.0",
  "description": "Insightful Eight Ltd Portal Frontend - PWA",
  "scripts": {
    "start": "npx serve . -p 3000 --single",
    "build": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true --input-dir ./ --output-dir ./build && echo 'Built to /build'",
    "preview": "npm run build && npx serve build"
  },
  "devDependencies": {
    "serve": "^14.2.1",
    "html-minifier": "^4.0.0"
  }
}
